#!/bin/bash

comp_foreman_start() {
  if [[ -f Procfile ]] && [[ $3 = start ]]; then
    words=`cat Procfile | cut -d ':' -f1`
    COMPREPLY=( $(compgen -W "$words" $2) )
  fi
}
complete -o default -F comp_foreman_start foreman
alias fs="foreman start"
alias fr="foreman run"

comp_fs() {
  if [[ -f Procfile ]] && [[ $3 = fs ]]; then
    words=`cat Procfile | cut -d ':' -f1`
    COMPREPLY=( $(compgen -W "$words" $2) )
  fi
}
complete -o default -F comp_fs fs

comp_npm_run() {
  if [[ -f package.json ]] && [[ $3 = run ]]; then

    words=`node<<-NODE
      const scripts = require('./package.json').scripts
      const list = Object.keys(scripts).join(' ')
      console.log(list)
NODE`

    COMPREPLY=( $(compgen -W "$words" $2) )
  fi
}
complete -o default -F comp_npm_run npm
alias nr="npm run"

comp_nr() {
  if [[ -f package.json ]] && [[ $3 = nr ]]; then
    words=`node<<-NODE
      const scripts = require('./package.json').scripts
      const list = Object.keys(scripts).join(' ')
      console.log(list)
NODE`
    COMPREPLY=( $(compgen -W "$words" $2) )
  fi
}
complete -o default -F comp_nr nr

comp_etcdctl() {
  DIR=$(echo $2 | sed -E 's~[^/]*$~~')
  WORDS=$(etcdctl ls -p $DIR | xargs -n 1 basename)
  INPUT=$(basename "$2")
  if [[ "$2" =~ /$ ]]; then
    INPUT=""
  fi
  COMPREPLY=( $(compgen -P "$DIR" -W "$WORDS" "$INPUT") )
}

alias etc=etcdctl
complete -o nospace -F comp_etcdctl etcdctl
complete -o nospace -F comp_etcdctl etc

